{
  "name": "gestor-clinica-backend",
  "version": "1.0.0",
  "description": "Backend API for Sistema de Gestão Clínica",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "node --import tsx start.mjs",
    "start": "npm run migrate && tsx src/index.ts",
    "build": "tsc",
    "migrate": "tsx src/db/migrate.ts",
    "test:db": "tsx src/db/test-connection.ts",
    "seed": "tsx src/db/seeds/default-admin.ts",
    "build:prod": "cd ../frontend && npm install --include=dev && npm run build && cd ../backend && npm install --include=dev && tsc"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
