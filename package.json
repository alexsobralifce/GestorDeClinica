{
  "name": "gestor-clinica",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de Gestão Clínica Multidisciplinar",
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "install:backend": "npm install --prefix backend",
    "install:frontend": "npm install --prefix frontend",
    "dev:backend-only": "npm run dev --prefix backend",
    "dev:frontend-only": "npm run dev --prefix frontend",
    "dev:backend": "lsof -ti:3001 | xargs kill -9 2>/dev/null; sleep 0.5; npm run dev:backend-only",
    "dev:frontend": "lsof -ti:5173 | xargs kill -9 2>/dev/null; sleep 0.5; npm run dev:frontend-only",
    "dev": "./dev.sh",
    "build:backend": "npm run build --prefix backend",
    "build:frontend": "npm run build --prefix frontend",
    "build": "npm run build:prod --prefix backend",
    "start": "npm start --prefix backend",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres"
  }
}